// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "theme": "Catppuccin Mocha",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "buffer_font_family": "MesloLGS-NF-Regular",
  "vim_mode": true,
  "cursor_blink": false,
  "tab_bar": {
    "show": false
  },
  "vim": {
    "use_system_clipboard": "always"
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "never"
  },
  "buffer_line_height": {
    "custom": 1.5
  },
  "terminal": {
    "font_family": "MesloLGS-NF-Regular",
    "font_size": 16,
    "line_height": {
      "custom": 1.5
    }
  },
  "project_panel": {
    "button": false
    // "default_width": 0
  },
  "vertical_scroll_margin": 0,
  "inlayHints": {
    "maxLength": null,
    "lifetimeElisionHints": {
      "useParameterNames": true,
      "enable": "skip_trivial"
    },
    "closureReturnTypeHints": {
      "enable": "always"
    }
  },
  "languages": {
    "Rust": {
      "language_servers": ["rust-analyzer", "tailwindcss-language-server"]
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        },
        "rust": {
          "analyzerTargetDir": "./target/check"
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "includeLanguages": {
          "rust": "html"
        },
        "experimental": {
          "classRegex": ["\\bclass=\\s*['\"]([^'\"]*)['\"]"]
        }
      }
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
